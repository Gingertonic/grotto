
<h1>Welcome inside, <%=current_user.username.titleize %>!</h1>

<h1>All dives</h1>
<%@dives.reverse.each do |dive| %>
  <pre><strong><a href="/divelogs/<%=dive.user.slug%>"><%=dive.user.username%></a></strong>
    <%=dive.date%> - <a href="/divesites/<%=dive.divesite.slug%>"><%=dive.divesite.name.titleize%></a>, <%=dive.divesite.location.titleize%>, <%=dive.divesite.country.titleize%>
    <a href="/<%=dive.user.slug%>/<%=dive.divesite.slug%>/<%=dive.slug%>">See dive</a>
  </pre>
<%end%>

<button type="button" name="divesites_button"><a href="/divesites">See all divesites</a></button>
<button type="button" name="new_dive_button"><a href="/dives/new">Log a new dive</a></button>
<button type="button" name="logout_button"><a href="/divelogs/<%=current_user.slug%>">Go to your divelog</a></button>
<button type="button" name="logout_button"><a href="/logout">Logout</a></button>
